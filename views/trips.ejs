<%- include('./partials/header.ejs')%>
    <title>Trips</title>
    <link rel="stylesheet" href="/css/trips.css" />
  </head>
  <body>
    <%- include('./partials/nav.ejs')%>
    <% if(!trips.length) {%>
    <section class="trips-title">No Trip Found</section>
    <% } else{ %>
    <section class="trips-title">All Trips</section>
    <div class="trips-box">
      <% trips.forEach(trip=>{%>
      <div class="trip-card">
        <h2 class="card-title-country"><%= trip.country_name%></h2>
        <h5 class="card-title-city"><%= trip.city_name%></h5>
        <div class="img-box">
          <img src="./images/<%= trip.image  %>" alt="img" class="card-img" />
        </div>
        <div class="detail-box">
          <div class="rating-box"><h2><%= trip.rating%>/10</h2></div>
          <div class="detail-title">
            <h3 style="margin-left: 15px;color: white;">Details:</h3>
          </div>
          <div class="data-box">
            <p>User: <%= trip.user_name%></p>
            <p>Email: <%= trip.email%></p>
            <p>Price: <%= trip.price%>$</p>
            <p class="description"><%= trip.review%></p>
          </div>
        </div>
      </div>
      <% })%>
    </div>
    <%}%>
  </body>
</html>
